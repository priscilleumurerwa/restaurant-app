<p id="notice"><%= notice %></p>

<h1>Restos</h1>
<div class="col-lg-3 col-md-6">
<%= search_form_for @q do |f| %>
  <%= f.search_field :name_cont,class:"form-control my-0 py-0 search",placeholder:'Search', style:"float:right" %>
  <% end %>
 </div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restos.each do |resto| %>
      <tr>
        <td><%= resto.name %></td>
        <td><%= resto.location %></td>
        <td><%= resto.description %></td>
        <td><%= image_tag resto.image_url %></td>
        <td><%= resto.price %></td>
        <td><%= link_to 'Show', resto %></td>
        <td><%= link_to 'Edit', edit_resto_path(resto) %></td>
        <td><%= link_to 'Destroy', resto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resto', new_resto_path %>
